{
  "openapi": "3.0.1",
  "info": {
    "title": "BukuKita Approval API",
    "description": "API untuk mengelola Approval peminjaman buku dalam sistem BukuKita",
    "version": "v1"
  },
  "paths": {
    "/api/Approvals": {
      "get": {
        "tags": [
          "Approvals"
        ],
        "summary": "Get all approvals",
        "description": "Retrieves all approval records in the system",
        "responses": {
          "200": {
            "description": "Successfully retrieved all approvals",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Approval"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Approval"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Approval"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": [
          "Approvals"
        ],
        "summary": "Create new approval",
        "description": "Creates a new approval request for book borrowing",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateApprovalRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateApprovalRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateApprovalRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Approval created successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "404": {
            "description": "Book not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/Approvals/pending": {
      "get": {
        "tags": [
          "Approvals"
        ],
        "summary": "Get pending approvals",
        "description": "Retrieves all approval records with pending status",
        "responses": {
          "200": {
            "description": "Successfully retrieved pending approvals",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Approval"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Approval"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Approval"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/Approvals/{id}": {
      "get": {
        "tags": [
          "Approvals"
        ],
        "summary": "Get approval by ID",
        "description": "Retrieves a specific approval by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Approval found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              }
            }
          },
          "404": {
            "description": "Approval not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "tags": [
          "Approvals"
        ],
        "summary": "Delete approval",
        "description": "Delete a pending approval request",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Approval deleted successfully"
          },
          "400": {
            "description": "Cannot delete non-pending approval"
          },
          "404": {
            "description": "Approval not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/Approvals/{id}/process": {
      "put": {
        "tags": [
          "Approvals"
        ],
        "summary": "Process approval",
        "description": "Approve or reject an approval request",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessApprovalRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessApprovalRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessApprovalRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Approval processed successfully",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Approval"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "404": {
            "description": "Approval not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": [
          "BukuKita"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StringDateTimeStringString<>f__AnonymousType6"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Approval": {
        "type": "object",
        "properties": {
          "idApproval": {
            "type": "string",
            "nullable": true
          },
          "idBuku": {
            "type": "string",
            "nullable": true
          },
          "judulBuku": {
            "type": "string",
            "nullable": true
          },
          "namaPeminjam": {
            "type": "string",
            "nullable": true
          },
          "tanggalPengajuan": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "keterangan": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateApprovalRequest": {
        "type": "object",
        "properties": {
          "idBuku": {
            "type": "string",
            "nullable": true
          },
          "namaPeminjam": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProcessApprovalRequest": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "nullable": true
          },
          "keterangan": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StringDateTimeStringString<>f__AnonymousType6": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "nullable": true
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "application": {
            "type": "string",
            "nullable": true
          },
          "version": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}